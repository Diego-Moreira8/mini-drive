# Node environment mode. Use 'development' or 'production'
NODE_ENV=development

# Optional. Defaults to 3000.
PORT=3000

# Maximum upload size (in bytes). Example: 50000000 = 50MB
UPLOAD_LIMIT=50000000

# Secret key used to sign session cookies 
SESSION_COOKIE_SECRET="your_secret"

# PostgreSQL database connection URL
# Format: postgres://user:password@host:port/database_name
DATABASE_URL="postgres://user:password@localhost:5432/odin-file-uploader"

# Supabase project URL
# Found at: Project Settings > API > Project URL
SUPABASE_PROJECT_URL=""

# Supabase secret key (service_role or secret)
# Found at: Project Settings > API > Project API Keys > service_role
SUPABASE_SECRET=""