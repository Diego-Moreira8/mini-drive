<%# 
  A navigation bar is included by default.
  To disable it, pass { includeNav: false } in the layout view options.
%>

<% if (locals.includeNav !== false) { %>
  <header class="appHeader">
    <%- include("./logo") %>

    <% if (locals.user) { %>
    <div class="driveUsage" title="Utilização">
      <div class="numbers">
        <div class="used">
          <%= locals.driveUsageMB %>
        </div>
        <div class="size">
          /50MB
        </div>
      </div>
      
      <div class="progressBar">
        <div class="size">
          <div
            class="used <%= locals.driveUsagePercentage > 90 ? "danger" : "" %>"
            style="width: <%= locals.driveUsagePercentage %>%;"
          ></div>
        </div>
      </div>
    </div>

    <div class="navOverlay"></div>
    
    <button type="button" class="navToggle">
      <span class="user">
        Olá, <%= locals.user.name || locals.user.username %>!
      </span>
      <span class="arrow">▼</span>
      
      <nav>
        <a href="/">Meus arquivos</a>
        <a href="/minha-conta">Minha conta</a>
        <a href="/sair">Sair</a>
      </nav>
    </button>
    <% } else { %>
      <div>
        <a class="button" href="/entrar">Entrar</a>
        <a class="button" href="/criar-conta">Criar conta</a>
      </div>
    <% } %>

  </header>
<% } %>