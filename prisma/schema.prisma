generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  name     String?
  files    File[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model File {
  id            Int    @id @default(autoincrement())
  fileName      String
  nameOnStorage String
  size          Int
  mimeType      String
  encoding      String
  owner         User   @relation(fields: [userId], references: [id])
  userId        Int
}
